@page
@model ControlSeguros.App.Frontend.Pages.MecanicoPag.RegistrarMecanicoModel
@{
}

<h2>Registrar Mecanico</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="NewMecanico.Documento">Documento:</label>
        <input asp-for="NewMecanico.Documento" class="form-control">
        <span class="text-danger" asp-validation-for="NewMecanico.Documento"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewMecanico.Nombre">Nombre:</label>
        <input asp-for="NewMecanico.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="NewMecanico.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewMecanico.Apellidos">Apellidos:</label>
        <input asp-for="NewMecanico.Apellidos" class="form-control">
        <span class="text-danger" asp-validation-for="NewMecanico.Apellidos"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewMecanico.Telefono">Telefono:</label>
        <input asp-for="NewMecanico.Telefono" class="form-control">
        <span class="text-danger" asp-validation-for="NewMecanico.Telefono"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewMecanico.FechaNacimiento">Fecha de Nacimiento:</label>
        <input type="date" asp-for="NewMecanico.FechaNacimiento" class="form-control">
        <span class="text-danger" asp-validation-for="NewMecanico.FechaNacimiento"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewMecanico.Usuario">Usuario:</label>
        <input asp-for="NewMecanico.Usuario" class="form-control">
        <span class="text-danger" asp-validation-for="NewMecanico.Usuario"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewMecanico.Contraseña">Contraseña:</label>
        <input type="password" asp-for="NewMecanico.Contraseña" class="form-control">
        <span class="text-danger" asp-validation-for="NewMecanico.Contraseña"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewMecanico.Direccion">Dirección:</label>
        <input asp-for="NewMecanico.Direccion" class="form-control">
        <span class="text-danger" asp-validation-for="NewMecanico.Direccion"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewMecanico.NivelEstudio">Nivel de estudio:</label>
        <input asp-for="NewMecanico.NivelEstudio" class="form-control">
        <span class="text-danger" asp-validation-for="NewMecanico.NivelEstudio"></span>
    </div>
    <br>
    <button type="submit" class="btn btn-primary" >Registrar</button>
</form>